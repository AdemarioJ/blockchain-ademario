<div class="row">
  <div class="col-md-12">
    <%= form_for @blockchain do |f| %>
      <div class="container" style="margin-top:30px">
        <div class="form-group">
          <%= f.label "De" %>
          <%= f.text_field :from, required: true, style: "width: 60%;",class: "form-control", :placeholder => "De" %>
        </div>

        <div class="form-group">
          <%= f.label "Para" %>
          <%= f.text_field :to, required: true, style: "width: 60%;", class: "form-control", :placeholder => "Para" %>
        </div>

        <div class="form-group">
          <%= f.label "O quê ?" %>
          <%= f.text_field :what, required: true, style: "width: 60%;",  class: "form-control", :placeholder => "O quê ?" %>
        </div>

        <div class="form-group">
          <%= f.label "Valor" %>
          <%= f.text_field :qty, required: true, style: "width: 60%;", class: "form-control", :placeholder => "Valor"%>
        </div>

        <%= f.submit 'Salvar', class: " button btn btn-primary" %>
      </div>
    <%end%>
  </div>

</div>
