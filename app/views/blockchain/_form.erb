
<%= form_for @blockchain, url: {action: "create"} do |f| %>

  <div class="row">
      <div class="col s4">
        <label for="" class=" col-sm-1 form-input--label">De </label>
        <%= f.text_field :from, class:"col-sm-2 form-input--field", placeholder: "De", required:"required" %>

      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col s4">
        <label for="" class="col-sm-1 form-input--label">Para </label>
        <%= f.text_field :to, class:"col-sm-2 form-input--field", placeholder: "Para", required:"required" %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col s4">
        <label for="" class="col-sm-1 form-input--label">O quê? </label>
        <%= f.text_field :what, class:"col-sm-2 form-input--field", placeholder: "O quê?", required:"required" %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col s4">
        <label for="" class="col-sm-1 form-input--label">Valor </label>
        <%= f.text_field :qty, class:"col-sm-2 form-input--field", placeholder: "Valor", required:"required" %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col s12 right-align">
        <button  f.submit type="submit" class="btn btn-primary mb-2" style= 'margin-left: 15px'>Salvar</button>
      </div>
    </div><!-- row -->
  
  </div><!-- row -->

<% end %>
