<h1>Blocos</h1>

<% @blockchain.each do | block | %>
    
    <div class="row">
        <div class="col s6">
            <ul>
                <li><b>Index:</b> <%= block.index%></li>
                <li><b>Timestamp: </b><%= block.created_at%></li>
                <li><b>Hash_id: </b><%= block.hash_id%></li>
            </ul>
        </div>

        <div class="col s6">
            <% qrcode = qrcode(block.hash_id) %>
            <%= image_tag qrcode %>
        </div>
        
    </div>
<% end %>