<h1>Blockchain</h1>

  <div class="row">
    <div class="col s6">

        <% @blockchain.each do | block | %>
            <ul>
                <li><%= block.index%></li>
                <li><%= block.timestamp%></li>
                <li><%= block.previous_hash%></li>
                <li><%= block.created_at%></li>
                <li><%= block.transaction_count%></li>
                <li><%= block.transactions_hash%></li>
                <li><%= block.nonce%></li>
                <li><%= block.hash_id%></li>
            </ul>
        <% end %>
    </div>

    <div class="col s6">
        <%= raw @qr.as_html %>
    </div>

</div>
