<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card" style="margin-top:20px; margin-bottom: 20px;">
      <div class="card-header text-center" style="background:#ffd959;">
        <h5 class="card-title">Cadastro de Informações</h5>
      </div>
      <div class="card-body" style="background:#ffd959;">

        <%= form_for @blockchain do |f| %>
        <div class="row ">
          <div class="col-md-8 mx-auto">

            <div class="form-group ">
              <%= f.label "De" %>
              <%= f.text_field :from, required: true,class: "form-control", :placeholder => "De" %>
            </div>

            <div class="form-group">
              <%= f.label "Para" %>
              <%= f.text_field :to, required: true, class: "form-control", :placeholder => "Para" %>
            </div>

            <div class="form-group">
              <%= f.label "O quê ?" %>
              <%= f.text_field :what, required: true,  class: "form-control", :placeholder => "O quê ?" %>
            </div>

            <div class="form-group">
              <%= f.label "Valor" %>
              <%= f.text_field :qty, required: true, class: "form-control", :placeholder => "Valor"%>
            </div>

            <div class="form-group">
              <%= f.label "País" %>
              <%= f.text_field :pais, required: true, class: "form-control", :placeholder => "País"%>
            </div>

            <div class="form-group">
              <%= f.label "Estado" %>
              <%= f.text_field :uf, required: true, class: "form-control", :placeholder => "Estado"%>
            </div>

            <div class="form-group">
              <%= f.label "Cidade" %>
              <%= f.text_field :cidade, required: true, class: "form-control", :placeholder => "Cidade"%>
            </div>

            <div class="form-group">
              <%= f.label "Bairro" %>
              <%= f.text_field :bairro, required: true, class: "form-control", :placeholder => "Bairro"%>
            </div>

            <div class="form-group">
              <%= f.label "Rua" %>
              <%= f.text_field :rua, required: true, class: "form-control", :placeholder => "Rua"%>
            </div>

            <div class="form-group">
              <%= f.label "Número" %>
              <%= f.text_field :numero, required: true, class: "form-control", :placeholder => "Número"%>
            </div>

            <div class="form-group">
              <%= f.label "CEP" %>
              <%= f.text_field :cep, required: true, class: "form-control", :placeholder => "CEP"%>
            </div>


            <%= f.submit 'Salvar', class: " button btn btn-primary float-right" %>
            <%end%>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>