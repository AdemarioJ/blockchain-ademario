
<%= form_for @blockchain, url: {action: "create"} do |f| %>

  <div class="row">
      <div class="col s4">
        <label for="" class="form-input--label">De </label>
        <%= f.text_field :from, class:"form-input--field", placeholder: "De", required:"required" %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col s4">
        <label for="" class="form-input--label">Para </label>
        <%= f.text_field :to, class:"form-input--field", placeholder: "Para", required:"required" %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col s4">
        <label for="" class="form-input--label">O quê? </label>
        <%= f.text_field :what, class:"form-input--field", placeholder: "O quê?", required:"required" %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col s4">
        <label for="" class="form-input--label">Valor </label>
        <%= f.text_field :qty, class:"form-input--field", placeholder: "Valor", required:"required" %>
      </div>
    </div><!-- row -->

    <div class="row">
      <div class="col s12 right-align">
        <%= f.submit 'Salvar', :style => 'margin-left: 20px' %>
      </div>
    </div><!-- row -->
    


  </div><!-- row -->

<% end %>
